     	  	 AND C.USER_NAME LIKE '%' || #{ searchValue } || '%'
     	   </if>
	</select>
	
 
 	<select id="selectWarnMember" resultMap="memberResultMap">
		
		SELECT
			    A.USER_ID
        	  , A.USER_NAME
        	  , A.EMAIL
        	  , A.BIRTH
       	  	  , A.GENDER
        	  , A.WARN_COUNT
        	  , A.QUIT_YN
        	  , A.MEM_TYPE
       	      , A.MEM_PHONE        
		 FROM  MEMBER A
		 WHERE  A.MEM_TYPE IN ('U','P')
       		AND  A.WARN_COUNT > 0
        ORDER BY A.WARN_COUNT DESC
		 </select>  
		  
		  
	<select id="selectManagerMember" resultMap="managerPartResultMap">
		
		SELECT
			    A.USER_ID
        	  , A.USER_NAME
        	  , A.EMAIL
        	  , A.BIRTH
       	  	  , A.GENDER
        	  , A.WARN_COUNT
        	  , A.QUIT_YN
        	  , A.MEM_TYPE
       	      , A.MEM_PHONE
       	      , M.MAN_PART        
		 FROM MEMBER A
    		, MANAGER M
		WHERE A.USER_ID = M.USER_ID
	</select>
 
 <select id="userinfo" resultMap="memberResultMap">
		
		 SELECT
			    A.USER_ID
        	  , A.USER_NAME
        	  , A.EMAIL
        	  , A.BIRTH
       	  	  , A.GENDER
        	  , A.WARN_COUNT
        	  , A.QUIT_YN
        	  , A.MEM_TYPE
       	      , A.MEM_PHONE
       	      , A.INTRODUCE
       	      , A.FAVORITE_ACTI
       	      , A.ENTER_DATE
		 FROM  MEMBER A
		WHERE USER_ID = #{userId}
	</select>
	
	
 	<!-- 매니저 정보 -->
 	<select id="managerinfo" resultMap="managerPartResultMap">
 SELECT
			    A.USER_ID
        	  , A.USER_NAME
        	  , A.EMAIL
        	  , A.BIRTH
       	  	  , A.GENDER
        	  , A.WARN_COUNT
        	  , A.QUIT_YN
        	  , A.MEM_TYPE
       	      , A.MEM_PHONE
       	      , M.MAN_PART        
		 FROM MEMBER A
    		, MANAGER M
		WHERE A.USER_ID = M.USER_ID
		 AND A.USER_ID = #{userId}
	</select>
	
 <!-- 매니저 파트 변경 -->
 <update id ="managerpartChange">
 
 UPDATE MANAGER
    SET MAN_PART = #{manPart}
  WHERE USER_ID= #{userId}  
 </update>
 
 <insert id="registManagerPart" parameterType="com.actibuddy.manager.model.dto.ManagerPartDTO">
INSERT
  INTO MANAGER
(
  MAN_PART
 ,USER_ID
 )
 VALUES
 (
   #{manPart}
 , #{userId}
 ) 
 
 </insert>
 
 <insert id="registManagerId" parameterType="com.actibuddy.member.model.dto.MemberDTO">
 INSERT
          INTO MEMBER A
        (
          A.USER_ID
        , A.USER_NAME
        , A.PASSWORD
        , A.EMAIL
        , A.BIRTH
        , A.GENDER
        , A.WARN_COUNT
        , A.QUIT_YN
        , A.MEM_TYPE
        , A.MEM_PHONE        
        )
        VALUES 
        (
          #{ userId }
        , 'manager'
        , #{ pwd }
        , 'manager'
        , 'manager'
        , 'N'
        , 0
        , 'N'
        , 'M'
        , 'manager'
        )
 
 </insert>
 
